                <us:Display Margin="20,0,20,0" DataContext="{Binding  CamCtrl2}"/>
                <us:Display Margin="20,0,20,0" DataContext="{Binding  CamCtrl3}"/>
                <us:Display Margin="20,0,0,0" DataContext="{Binding  CamCtrl4}"/>
               
                
            </StackPanel>

